# Java - Primary language
*.java linguist-detectable=true
*.xml linguist-detectable=true

# Spring Boot framework files
*.properties linguist-language=Properties
*.yml linguist-language=YAML
*.yaml linguist-language=YAML
pom.xml linguist-language=Maven-POM

# Frontend technologies - properly detect
*.html linguist-detectable=true
*.css linguist-detectable=true
*.js linguist-detectable=true

# Template files (Thymeleaf)
src/main/resources/templates/** linguist-language=HTML

# Static assets
src/main/resources/static/css/** linguist-language=CSS
src/main/resources/static/js/** linguist-language=JavaScript
src/main/resources/static/images/** linguist-vendored=true

# Ignore generated/build files from language stats
target/** linguist-generated=true
*.class linguist-generated=true

# Ensure build files are detected
pom.xml linguist-language=Maven POM
*.gradle linguist-language=Gradle

# Documentation
*.md linguist-documentation=true

# Spring Boot specific configurations
*.properties linguist-language=Properties
*.yml linguist-language=YAML
*.yaml linguist-language=YAML

# Security files (exclude from language detection)
*.p12 linguist-generated=true
*.jks linguist-generated=true